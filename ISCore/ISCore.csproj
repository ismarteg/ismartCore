<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>1.0.1</Version>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>Ahmed Salah</Authors>
    <Company>ISmart egypt</Company>
    <PackageId>IsCoreBase</PackageId>
    <Description>Core Base Library for Entity Services, UoW, and DTO Mapping</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>EntityFramework;UoW;Repository;BaseService;DTO;ASP.NET;Mapping;SoftDelete</PackageTags>
    <RepositoryUrl>https://github.com/ismarteg/ismartCore</RepositoryUrl>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="15.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Identity" Version="2.3.1" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="8.0.2" />
  </ItemGroup>

</Project>
